{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",

	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},

	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"jsxQuoteStyle": "double",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "es5"
		}
	},

	"html": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 100,
			"attributePosition": "auto",
			"bracketSameLine": false
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},

	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
